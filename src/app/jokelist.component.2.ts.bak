import { Component } from '@angular/core';

class Joke {
    public setup: string;
    public punchline: string;
    public hide: boolean;

    constructor(setup: string, punchline: string) {
        this.setup = setup;
        this.punchline = punchline;
        this.hide = true;
    }

    toggle() {
        this.hide = !this.hide;
    }
}

@Component({
    selector: 'joke-list',
    template: `
    <div class="card mb-3"
    *ngFor="let joke of jokes" style="width: 320px;">
    <div class="card-body">
    <h4 class="card-title">{{ joke.setup }}</h4>
    <p class="card-text" [hidden]="joke.hide">{{ joke.punchline }}</p>
    <button class="btn btn-primary" (click)="joke.toggle()" role="button">Tell me</button>
    </div>
    </div>
    `
})

export class JokeListComponent {
    jokes: Joke[];

    constructor() {
        this.jokes = [
            new Joke('What joke 1?','Joke 1'),
            new Joke('What joke 2?','Jole 2'),
            new Joke('What joke 3?','Joke \'3\''),
        ];
    }
}